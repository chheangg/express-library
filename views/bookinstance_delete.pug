extends layout

block content
  h1 #{title}: #{bookinstance.name}
  p imprint: #{bookinstance.imprint}
  p status: #{bookinstance.status} #{bookinstance.due_back ? `due-back: ${bookinstance.due_back_formatted}` : null}
  p Do you really want to delete this BookInstance?

  form(method='POST' action='')
    div.form-group
      input#bookinstance.form-control(type='hidden',name='bookinstanceid', required='true', value=bookinstance._id )

    button.btn.btn-primary(type='submit') Delete